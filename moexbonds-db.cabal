  build-depends:       base ^>=4.13.0.0
                     , bytestring
                     , data-moex
                     , exceptions
                     , interpolatedstring-perl6
                     , newtype
                     , postgresql-simple
                     , scientific
                     , text
                     , text-conversions
                     , time

  -- hs-source-dirs:
  default-language:    Haskell2010
  default-extensions:
